{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "betterinv",
  "version": "0.1.6",
  "identifier": "com.betterinv.cs2inv",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "tauri",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "backend.zip"
    ],
    "externalBin": [
      "binaries/node"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "cs2-inv"
        ]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDk2QUJFQzlGQzY1M0YzQTEKUldTaDgxUEduK3lybGs4VWRsc0NmeVdoRzNPeEtzaEFzUG1md1pYcjUxRjNsWUVvdFV6bWd4b24K",
      "endpoints": [
        "https://github.com/NicholasThierolf/betterinv-public/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}